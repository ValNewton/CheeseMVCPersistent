@model List<CheeseMVC.Models.CheeseCategory>


@if (Model.Count > 0)
{
    <h1>Categories:</h1>

    <ul>
        @foreach (var category in Model)
        {
            <li>                
                @category.Name
            </li>

        }

    </ul>

    <p><a asp-controller="Category" asp-action="Add">Add Category</a></p>

}

else{
    <div>No categories yet. </div>
       }